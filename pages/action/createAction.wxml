
<!--pages/action/createAction.wxml-->
<view class="page">
  <view class="page__hd">
    <view  bindtap="bindViewTap" class="userinfo container">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </view>
    <view class="page__title">我要发起一个活动</view>
  </view>
  <view class="page__bd">
     <form bindsubmit="formSubmit">
     <view class="weui-cells__title">请输入活动介绍</view>
        <view class="weui-cells weui-cells_after-title">
     
        <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">活动标题</view>
        </view>
        <view class="weui-cell__bd">
          <input id="subject" name="actTitle" class="weui-input" bindchange="bindChange" placeholder="简要描述你的活动主题" />
        </view>
        </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">活动类型</view>
        </view>
        <view class="weui-cell__bd">
          <picker id="acttype" mode="selector" value="{{actTypeIndex}}" range="{{actTypes}}" bindchange="bindChange">
            <input type="hidden" disabled="true" name="acttype" value="{{actTypes[actTypeIndex]}}"/>
            <!--<view name="actType" class="weui-input">{{actTypes[actTypeIndex]}}</view>-->
          </picker>
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">运动类别</view>
        </view>
        <view class="weui-cell__bd">
          <picker id="sprtype" mode="selector" value="{{sprTypeIndex}}" range="{{sprTypes}}" bindchange="bindChange">
            <!--<view name="sprType" class="weui-input">{{sprTypes[sprTypeIndex]}}</view>-->
            <input type="hidden" disabled="true" name="sprtype" value="{{sprTypes[sprTypeIndex]}}"/>
          </picker>
        </view>
      </view>

        

          <view class="weui-cell">
            <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="请输入活动介绍" style="height: 3.3em" />
            <view name="actContent" class="weui-textarea-counter">0/200</view>
          </view>
        </view>
     </view>
     
      
    <view class="weui-cells weui-cells_after-title">
       
     <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">是否定时</view>
        <view class="weui-cell__ft">
          <switch name="isSetTime" id="isSetTime" bindchange="switchChange"/>
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">活动周期</view>
        </view>
        <view class="weui-cell__bd">
          <picker id="actterm" mode="selector" value="{{actTermIndex}}" range="{{actTerms}}" bindchange="bindChange" disabled="{{acttermDisabled}}">
            <!--<view name="actTerm" class="weui-input">{{actTerms[actTermIndex]}}</view>-->
         <input type="hidden" disabled="true" name="actterm" value="{{actTerms[actTermIndex]}}"/>
          </picker>
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">活动日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker id="date" mode="date" value="{{date}}" start="{{date}}"  bindchange="bindChange" disabled="{{dateDisabled}}">
            <view name="actDate" class="weui-input">{{date}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">活动时间</view>
        </view>
        <view class="weui-cell__bd">
          <picker id="time" mode="time" value="{{time}}" start="{{time}}" end="21:01" bindchange="bindChange">
            <view name="actTime" class="weui-input">{{time}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">是否预定场地</view>
        <view class="weui-cell__ft">
          <switch checked  name="isReserve"/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">场地信息</view>
        </view>
        <view class="weui-cell__bd">
          <input name="areaInfo" class="weui-input" placeholder="请输入场地信息" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">拟参与人数</view>
        </view>
        <view class="weui-cell__bd">
          <input name="planPeople" class="weui-input" type="number"/>
        </view>
      </view>
      
       <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">费用类型</view>
        </view>
        <view class="weui-cell__bd">
          <picker id="feetype" mode="selector" value="{{feeTypeIndex}}" range="{{feeTypes}}" bindchange="bindChange">
            <!--<view name="feeType" class="weui-input">{{feeTypes[feeTypeIndex]}}</view>-->
          <input type="hidden" disabled="true" name="feetype" value="{{feeTypes[feeTypeIndex]}}"/>
          </picker>
        </view>
      </view>

      <view class="weui-cell">
            <view class="weui-cell__bd">
            <textarea class="weui-textarea" placeholder="留言" style="height: 3.3em" />
            <view name="leaveMessage" class="weui-textarea-counter">0/50</view>
          </view>
        </view>

      </view>
     
    
  
      <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="submit" formType="submit">确定</button>
      </view>

    </form>
    </view><!--page__bd-->
</view><!--page-->