
<!--pages/action/action.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="weui-flex">
      <view class="weui-flex__item"></view>
      <view class="weui-flex__item"></view>
      <view class="weui-flex__item">
        <button type="primary" size="mini" bindtap="primary">发起活动</button>
      </view>
    </view>
  </view>
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="{{index}}">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>

      <!--附近的活动-->
      <view >
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

          <!--<view class="weui-cells__title">附近的活动</view>-->
          <view class="weui-cells weui-cells_after-title">
            <view class="page_list" wx:for="{{actObj}}" wx:key="index">
              <view class='place-container weui-panel weui-panel_access'>
                <navigator url="selectAction?actId={{actObj[index]._id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                  <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="http://pic.58pic.com/58pic/13/14/14/21s58PICdGy_1024.jpg" />
                  </view>
                  <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-cell__bd" hidden="false">{{actObj[index]._id}}</view>
                    <view class="weui-media-box__title">{{actObj[index].sprType}}</view>
                    <view class="weui-media-box__desc">{{actObj[index].actType}}</view>
                     <view class="weui-media-box__desc">{{actObj[index].actDate}}</view>
                  </view>
                </navigator>
              </view>
            </view>
          </view>
        </view>

        <!--热门的活动-->
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">

          <!--<view class="weui-cells__title">热门的活动</view>-->
          <view class="weui-cells weui-cells_after-title">
            <view class="page_list" wx:for="{{actObj}}" wx:key="index">
              <view class='place-container weui-panel weui-panel_access'>
                <navigator url="selectAction?actId={{actObj[index]._id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                  <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="http://pic.58pic.com/58pic/13/14/14/21s58PICdGy_1024.jpg" />
                  </view>
                  <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-cell__bd" hidden="false">{{actObj[index]._id}}</view>
                    <view class="weui-media-box__title">{{actObj[index].sprType}}</view>
                    <view class="weui-media-box__desc">{{actObj[index].actType}}</view>
                    <view class="weui-media-box__desc">{{actObj[index].actDate}}</view>
                  </view>
                </navigator>
              </view>
            </view>
          </view>
        </view>

        <!--最新的活动-->
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">

          <!--<view class="weui-cells__title">最新的活动</view>-->
         
          <view class="weui-cells weui-cells_after-title">
            <view class="page_list" wx:for="{{actObj}}" wx:key="index">
              <view class='place-container weui-panel weui-panel_access'>
                <navigator url="selectAction?actId={{actObj[index]._id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                  <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="http://pic.58pic.com/58pic/13/14/14/21s58PICdGy_1024.jpg" />
                  </view>
                  <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-cell__bd" hidden="false">{{actObj[index]._id}}</view>
                    <view class="weui-media-box__title">{{actObj[index].sprType}}</view>
                    <view class="weui-media-box__desc">{{actObj[index].actType}}</view>
                     <view class="weui-media-box__desc">{{actObj[index].actDate}}</view>
                  </view>
                </navigator>
              </view>
            </view>
          </view>







        </view>



      </view>
    </view>
  </view>
</view>