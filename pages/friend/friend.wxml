<import src="/common/template.wxml" />
<view class="page">
  <view class="page__hd">
    <view class="location ellipsis" bindtap="toNearby">
      <view class="fa fa-map-marker"></view>
      {{cityName}}(切换地图模式)
    </view>
  </view>
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for-items="{{tabs}}" wx:key="{{index}}">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">

        <!--找熊友-->
        <view class="" hidden="{{activeIndex != 0}}">
           

          <view class="page_list" wx:for="{{friendList}}">

            <template is="tFindFriend" data="{{item}}" />
          </view>
        </view>
        
        <view class="" hidden="{{activeIndex != 1}}">
          
          <view class="page_list" wx:for="{{markers}}" wx:for-index="id">
            <template is="tPlaceList" data="{{item}}" />
          </view>
        </view>
      </view>
    </view>
  </view>
</view>